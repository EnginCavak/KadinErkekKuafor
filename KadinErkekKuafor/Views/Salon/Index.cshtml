@model IEnumerable<KuaforYonetimSistemi.Models.Salon>

<h1>Salon Listesi</h1>

<p>
    <a href="/Salon/Create" class="btn btn-primary">Yeni Salon Ekle</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ad</th>
            <th>Adres</th>
            <th>Telefon</th>
            <th>Çalışma Saatleri</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var salon in Model)
        {
            <tr>
                <td>@salon.SalonID</td>
                <td>@salon.Ad</td>
                <td>@salon.Adres</td>
                <td>@salon.Telefon</td>
                <td>@salon.CalismaSaatleri</td>
                <td>
                    <a href="/Salon/Edit/@salon.SalonID" class="btn btn-warning">Düzenle</a>
                    <a href="/Salon/Details/@salon.SalonID" class="btn btn-info">Detay</a>
                    <a href="/Salon/Delete/@salon.SalonID" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
