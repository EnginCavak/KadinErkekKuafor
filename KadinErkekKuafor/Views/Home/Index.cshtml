@{
    ViewData["Title"] = "Kuaför Yönetim Sistemi";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4">Kuaför Yönetim Sistemi</h1>
        <p class="lead">Salonlarınızı, müşterilerinizi ve çalışanlarınızı kolayca yönetin.</p>
    </div>

    <div class="row text-center">
        <!-- Admin Yönetimi -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Admin Girisi</h5>
                    <p class="card-text">Admin bilgilerini yönetin ve yeni adminler ekleyin.</p>
                    <a href="/Admin" class="btn btn-primary">Git</a>
                </div>
            </div>
        </div>

        <!-- Müşteri Yönetimi -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Müşteri Girisi</h5>
                    <p class="card-text">Müşteri kayıtlarını görüntüleyin ve düzenleyin.</p>
                    <a href="/Musteri" class="btn btn-success">Git</a>
                </div>
            </div>
        </div>

        <!-- Salon Yönetimi -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Salon Yonetimi</h5>
                    <p class="card-text">Salon bilgilerini yönetin ve düzenleyin.</p>
                    <a href="/Salon" class="btn btn-info">Git</a>
                </div>
            </div>
        </div>
    </div>

    <footer class="mt-5 text-center">
        <p class="text-muted">&copy; 2024 Kuaför Yönetim Sistemi</p>
    </footer>
</div>
